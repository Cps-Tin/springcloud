<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bd.springcloud.dao.UserMapper">

    <!-- 封装返回结果resultMap -->
    <resultMap id="userResultMap" type="cn.bd.springcloud.entity.User">
        <id property="id" column="id"/>
        <id property="userName" column="user_name"/>
        <!-- 这里密码就不返回给前台了 -->
        <!-- <id property="userPassword" column="user_password"/> -->
        <id property="userGender" column="user_gender"/>
        <id property="createDate" column="create_date"/>
    </resultMap>

    <!-- 查询用户列表 searchName userSex userDisabled -->
    <select id="getUserList" resultMap="userResultMap">
        select  * from `user`
    </select>

</mapper>